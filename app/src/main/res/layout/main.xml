<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".main">

    <!-- Include toolbar layout at the top -->
    <include layout="@layout/toolbar"/>

    <!-- Background shape image at the bottom center -->
    <ImageView
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/loginshape" />

    <!-- Title or banner image centered near the top -->
    <ImageView
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginBottom="250dp"
        android:src="@drawable/quiztime" />

    <!-- Math Quiz Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/l_mathtile"
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="30dp">

        <!-- Container with custom background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/redshape">

            <!-- Content of the card arranged vertically -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Top spacing -->
                <Space android:layout_width="match_parent" android:layout_height="15dp" />

                <!-- Title text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="Math"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white3" />

                <!-- Subtitle / description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="Learn Basic Arithmetic!"
                    android:textSize="13sp"
                    android:textColor="@color/white3" />

                <!-- Spacer between text and button -->
                <Space android:layout_width="match_parent" android:layout_height="30dp" />

                <!-- Button to take Math quiz -->
                <Button
                    android:id="@+id/l_math"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_gradientwhite"
                    android:text="Take Quiz"
                    android:elevation="100dp"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Icon on the right side -->
            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:src="@drawable/mathicon" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Science Quiz Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/blue2"
        app:cardCornerRadius="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blueshape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Top spacing -->
                <Space android:layout_width="match_parent" android:layout_height="15dp" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="Science"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="Be the Next Einstein!"
                    android:textSize="13sp"
                    android:textColor="@color/white" />

                <!-- Spacer -->
                <Space android:layout_width="match_parent" android:layout_height="30dp" />

                <!-- Button -->
                <Button
                    android:id="@+id/l_science"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_gradientwhite"
                    android:text="Take Quiz"
                    android:textColor="@color/blue2"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Science icon -->
            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/scienceicon" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- English Quiz Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="260dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yellowshape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Top space -->
                <Space android:layout_width="match_parent" android:layout_height="15dp" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="English"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="Be a Grammar Master!"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <!-- Spacer -->
                <Space android:layout_width="match_parent" android:layout_height="30dp" />

                <!-- Button -->
                <Button
                    android:id="@+id/l_english"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_gradientwhite"
                    android:text="Take Quiz"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- English icon -->
            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/englishicon" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
